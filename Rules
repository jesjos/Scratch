#!/usr/bin/env ruby

# page d'Accueil
route '/' do
    '/index.html'
end

# default
# rep => :default est sous-entendu
compile '*' do
  filter :erb
  layout 'default'
end
route '*' do
  '/Scratch/multi' + item.identifier + 'index.html'
end

# fr
compile '*', :rep => :fr do
  filter :erb
  layout 'default'
end
route '*', :rep => :fr do
  '/Scratch/fr' + item.identifier + 'index.html'
end

# en
compile '*', :rep => :en do
  filter :erb
  layout 'default'
end
route '*', :rep => :en do
  '/Scratch/en' + item.identifier + 'index.html'
end

layout '*', :erb
