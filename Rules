#!/usr/bin/env ruby

# engendrement des fichiers html

# page d'Accueil
#route '/' do
#    '/index.html'
#end

# CSS
compile '/css/*' do
    filter :sass
end
route '/css/*' do
    '/Scratch' + item.identifier.chop + '.css'
end

# HTML
compile '/html/*' do
  filter :erb
  layout 'default'
end
route '/html/*' do
  '/Scratch' + item.identifier.sub('/html','') + 'index.html'
end

layout '*', :erb

